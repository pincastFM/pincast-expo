{
  "name": "expo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "lint": "NODE_OPTIONS=--experimental-vm-modules eslint --config eslint.config.js .",
    "typecheck": "nuxt typecheck",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:e2e": "cypress run",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 'cypress run'",
    "cypress:open": "cypress open",
    "cypress:install": "cypress install",
    "cypress:verify": "cypress verify",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "node --loader ts-node/esm scripts/run-migrations.ts",
    "db:migrate:dev": "NODE_ENV=development node --loader ts-node/esm scripts/run-migrations.ts",
    "db:migrate:prod": "NODE_ENV=production node --loader ts-node/esm scripts/run-migrations.ts",
    "db:studio": "drizzle-kit studio",
    "db:studio:dev": "NODE_ENV=development drizzle-kit studio",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio",
    "db:seed": "node --loader ts-node/esm server/seed.ts",
    "db:seed:dev": "NODE_ENV=development node --loader ts-node/esm server/seed.ts",
    "db:seed:prod": "NODE_ENV=production node --loader ts-node/esm server/seed.ts",
    "db:check": "node --loader ts-node/esm scripts/check-db.ts",
    "db:check:dev": "NODE_ENV=development node --loader ts-node/esm scripts/check-db.ts",
    "db:check:prod": "NODE_ENV=production node --loader ts-node/esm scripts/check-db.ts"
  },
  "dependencies": {
    "@logto/nuxt": "^1.2.3",
    "@logto/vue": "^3.0.6",
    "@pincast/sdk": "workspace:*",
    "@pinia/nuxt": "latest",
    "@types/pg": "^8.11.13",
    "@vercel/postgres": "latest",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.27.0",
    "drizzle-zod": "^0.5.0",
    "pg": "^8.14.1",
    "pinia": "^3.0.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/icon": "latest",
    "@nuxtjs/eslint-config-typescript": "latest",
    "@nuxtjs/tailwindcss": "latest",
    "@pinia/testing": "latest",
    "@types/cypress": "^1.1.6",
    "@types/node": "^20.17.30",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitejs/plugin-vue": "latest",
    "@vue/test-utils": "latest",
    "cypress": "latest",
    "drizzle-kit": "^0.18.1",
    "eslint": "~9.25.0",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-vue": "latest",
    "vue-eslint-parser": "latest",
    "h3": "^1.9.0",
    "husky": "latest",
    "jose": "^6.0.10",
    "jsdom": "latest",
    "lint-staged": "latest",
    "node-mocks-http": "^1.16.2",
    "nuxt": "^3.10.1",
    "prettier": "latest",
    "start-server-and-test": "^2.0.11",
    "ts-node": "^10.9.2",
    "typescript": "latest",
    "uuid": "^11.1.0",
    "vitest": "latest",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "vue-tsc": "latest"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "NODE_OPTIONS=--experimental-vm-modules eslint --config eslint.config.js --fix",
      "prettier --write"
    ]
  }
}