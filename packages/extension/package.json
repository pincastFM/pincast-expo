{
  "name": "pincast-expo",
  "displayName": "Pincast Expo",
  "description": "One-click setup for Pincast location-based experiences. Enable SDK, initialize, and deploy from VS Code.",
  "version": "0.2.0",
  "publisher": "pincast",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:package.json"
  ],
  "main": "./dist/extension.js",
  "icon": "media/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "pincast.enable",
        "title": "Pincast: Enable Expo in Workspace"
      },
      {
        "command": "pincast.publish",
        "title": "Pincast: Publish to Marketplace"
      },
      {
        "command": "pincast.login",
        "title": "Pincast: Login"
      },
      {
        "command": "pincast.openDashboard",
        "title": "Pincast: Open Dashboard"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "vscode-test-electron"
  },
  "dependencies": {
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/sinon": "^10.0.15",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "sinon": "^15.2.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  }
}